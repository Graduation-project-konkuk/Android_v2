<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mlayout_chat_profile_layout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:fontFamily="sans-serif-condensed"
            android:text="트레이너 프로필"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mlayout_chat_profile_layout1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/mlayout_chat_profile_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/trainer" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout2"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mlayout_chat_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="흑자헬스"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout3"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mlayout_chat_profile_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout4"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경력기간 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mlayout_chat_profile_historyPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012.12.23~2022.10.10"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout5"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소개 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mlayout_chat_profile_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요! 흑자헬스입니다."
                android:textSize="20dp" />
                <!--                    android:text="대한민국의 유튜버이자 충청북도 청주시 흥덕구 오송읍에 위치한 헬스장을 운영하는 퍼스널 트레이너."-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout6"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mlayout_chat_profile_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mlayout_chat_profile_layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mlayout_chat_profile_layout7"
                android:padding="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/mlayout_chat_profile_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="메시지 보내기"
                    android:textSize="15dp"
                    />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>